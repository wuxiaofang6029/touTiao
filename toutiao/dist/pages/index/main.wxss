@import "../../common/vendor.wxss";

.counter-warp .home {
  color: mediumvioletred;
}
.counter-warp {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  overflow: hidden;
}
.top {
  width: 100%;
  height: 88rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  padding: 0 10rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}
.top_right {
  width: 160rpx;
  border-left: 2rpx solid #eee;
}
.top ._i-icon {
  -ms-flex-preferred-size: 0;
  flex-basis: 0;
  -ms-flex-negative: 1;
  flex-shrink: 1;
  margin: 0 8rpx;
}
.tab_nav {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  line-height: 100rpx;
  white-space: nowrap;
  overflow-x: scroll;
}
.tab_nav {
  font-size: 32rpx;
  margin: 0 16rpx 0 8rpx;
  display: inline-block;
}
.content {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow-y: scroll;
}
.c_main {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  padding: 20rpx 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ccc;
}
.c_block {
  width: 100%;
}
.c_title {
  width: 100%;
  font-size: 32rpx;
  line-height: 1.5;
}
.c_info {
  width: 100%;
  line-height: 2.5;
  color: #666;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.c_info ._span {
  margin-right: 20rpx;
}
.gallery {
  width: 100%;
  margin: 10rpx 0;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  justify-content: space-between;
  padding: 10rpx 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow: hidden;
}
.gallery ._img {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.gallery ._img:nth-child(2) {
  margin: 0 10rpx;
}
.c_main > .middle-image {
  width: 45%;
  height: 200rpx;
  padding-left: 10rpx;
  margin-top: 20rpx;
}
.card {
  padding: 20rpx;
}